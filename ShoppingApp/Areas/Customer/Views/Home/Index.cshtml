@model List<Product>

<div class="pb-3">
    @foreach(var obj in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@obj.ImgUrl" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@obj.Title </p>
                                <p class="card-title text-warning text-center">by <b>@obj.Author</b> </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
