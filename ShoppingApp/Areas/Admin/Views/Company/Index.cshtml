@model List<Company>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
            Company List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Company" asp-action="Create">
                <i class="bi bi-plus-circle"></i>Add Company
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="text-center">
                <th>Name</th>
                <th>City</th>
                <th>Phone</th>
                <th>State</th>
                @* <th></th> *@
                @* <th>Price (1-50)</th>
                <th>Price (51-100)</th>
                <th>Price (100+)</th> *@
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr class="text-center">
                    <td>@obj.Name</td>
                    <td>@obj.City</td>
                    <td>@obj.PhoneNumber</td>
                    <td>@obj.State</td>
                    @* <td></td> *@
                    @* <td>@obj.Price</td>
                    <td>@obj.Price50</td>
                    <td>@obj.Price100</td> *@
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
